 keywords = {BF-PF,Hemoglobin oxygenation,Human,Near infrared spectrophotometry,OxyMon,Visual cortex,Visual stimulus},
 mendeley-tags = {BF-PF,OxyMon},
 month = {jan},
 number = {1},
 pages = {97--102},
 pmid = {11163619},
 title = {Simultaneous near-infrared spectroscopy monitoring of left and right occipital areas reveals contra-lateral hemodynamic changes upon hemi-field paradigm},
