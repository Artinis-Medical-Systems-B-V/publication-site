   isbn = {0123456789},
   issn = {14396319},
   issue = {5},
   journal = {European Journal of Applied Physiology},
   pages = {1117-1125},
   pmid = {30771059},
   publisher = {Springer Berlin Heidelberg},
   title = {Sensitivity and reliability of cerebral oxygenation responses to postural changes measured with near-infrared spectroscopy},
   volume = {119},
   url = {http://dx.doi.org/10.1007/s00421-019-04101-0},
   year = {2019},
}
@article{puthon_effect_2017,
   abstract = {This study assessed the effects of aging on cardiorespiratory and tissue oxygenation responses to hypoxia both at rest and during incremental maximal exercise. Sixteen young (20-30 years) and 15 older (60-70 years) healthy subjects performed two maximal incremental cycling tests in normoxia and hypoxia (inspiratory oxygen fraction: 12\{\%\}). Cardiorespiratory responses, prefrontal cortex and quadriceps tissue oxygenation (near infrared spectroscopy) were measured during exercise as well as during hypercapnia at rest. The hypoxic ventilatory response was similar in young compared to older individuals at rest and during moderate intensity exercise (50\{\%\} maximal power output: young 0.9±0.2 versus older 1.1±0.8 lmin-1\{\%\}-1; p\{\textgreater\}0.05) but larger in young subjects during high intensity exercise (maximal power output: 2.2±0.8 versus 1.8±1.1 lmin-1\{\%\}-1; p\{\textless\}0.05). The hypoxic cardiac response did not differ between groups both at rest and during exercise. During exercise in hypoxia, young subjects showed greater deoxygenation than older subjects, both at the prefrontal cortex and quadriceps levels. The hypoxia-induced reduction in maximal power output (young -32±5\{\%\} versus older -30±6\{\%\}; p\{\textgreater\}0.05) and the hypercapnic responses did not differ between groups.},
