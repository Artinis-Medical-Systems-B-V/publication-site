   issue = {3},
   journal = {PLoS ONE},
   keywords = {BF-P,BF-PF,OxyMon},
   month = {3},
   pages = {e92045},
   title = {Towards a Near Infrared Spectroscopy-Based Estimation of Operator Attentional State},
