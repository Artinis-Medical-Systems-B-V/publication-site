   issn = {1079-5006},
   issue = {Xx},
   journal = {The Journals of Gerontology: Series A},
   keywords = {BF-M,BF-P,BF-PF,BF-V,NIRS-EEG,OctaMon},
   pages = {1-7},
   title = {Is Cortical Activation During Walking Different Between Parkinson's Disease Motor Subtypes?},
   volume = {XX},
   year = {2020},
}
