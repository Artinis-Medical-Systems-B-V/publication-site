   isbn = {0123456789},
   issn = {14396327},
   journal = {European Journal of Applied Physiology},
   keywords = {PortaLite},
   publisher = {Springer Berlin Heidelberg},
   title = {Influence of sprint exercise on aortic pulse wave velocity and femoral artery shear patterns},
