   journal = {International Journal of Sport Nutrition and Exercise Metabolism},
   keywords = {Cycling,Muscle metabolism,Nitric oxide,Polyphenols,Prefrontal cortex},
   month = {9},
   pages = {420-426},
   pmid = {32916656},
   publisher = {Human Kinetics},
   title = {Effect of dark chocolate supplementation on tissue oxygenation, metabolism, and performance in trained cyclists at altitude},
   volume = {30},
   url = {https://journals.humankinetics.com/view/journals/ijsnem/aop/article-10.1123-ijsnem.2020-0051/article-10.1123-ijsnem.2020-0051.xml},
