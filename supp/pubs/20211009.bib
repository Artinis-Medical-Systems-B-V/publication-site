@article{mehagnoul-schipper_cerebral_2003,
   abstract = {Patients with left ventricular dysfunction may have different orthostatic responses of blood pressure (BP) and cerebral oxygenation than healthy elderly subjects. We investigated orthostatic changes in systemic haemodynamic variables and cerebral oxygenation in 21 elderly patients with heart failure New York Heart Association class I–III in stable condition (age 70–83 years) after withdrawal of furosemide and captopril for 2 weeks, and in 18 healthy elderly subjects (age 70–84 years). Frontal cortical concentration changes of oxyhaemoglobin ([O2Hb]) and deoxyhaemo- globin ([HHb]) were continuously measured by near-infrared spectrophotometry and BP changes by Finapres before and during 10 min of standing. Upon standing [O2Hb] reflecting blood flow, changed by )1Æ2±0Æ9 lmol L)1 (mean ± SEM) in the patients, whereas it decreased by )4Æ5±0Æ6 lmol L)1 (P\{\textless\}0Æ01) in the healthy subjects after standing (P\{\textless\}0Æ05 between groups). [HHb] reflecting the sum of cerebral blood flow, arterial oxygen saturation and cerebral oxygen uptake, increased by 1Æ5±0Æ5 lmol L)1 (P\{\textless\}0Æ05) and 1Æ7±0Æ6 lmol L)1 (P\{\textless\}0Æ05), respectively. Compared with healthy elderly subjects, elderly patients with left ventricular dysfunction showed smaller orthostatic [O2Hb] decreases (P\{\textless\}0Æ01), in relation to higher orthostatic BP rises (P\{\textless\}0Æ05). These findings indicate that BP changes and an altered cardiovascular balance may influence orthostatic cortical haemodynamic responses in elderly subjects.},
   author = {D J Mehagnoul-Schipper and Lilian C M Vloet and Willy Colier and Willibrord H L Hoefnagels and Freek W A Verheugt and Rene W M M Jansen},
