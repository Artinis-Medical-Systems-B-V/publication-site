   issn = {00063126},
   issue = {2},
   journal = {Biology of the Neonate},
   keywords = {Blood supply,Brain,Near infrared spectroscopy,Premature infants,Sodium bicarbonate},
   pages = {122-127},
   pmid = {16569929},
   title = {Effects of rapid versus slow infusion of sodium bicarbonate on cerebral hemodynamics and oxygenation in preterm infants},
