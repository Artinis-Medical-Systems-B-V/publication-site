   doi = {10.1016/j.ijcard.2011.11.086},
   issn = {01675273},
   issue = {1},
   journal = {International Journal of Cardiology},
   keywords = {Exercise training,Heart failure,Hemodynamics,Ventilation},
   pages = {41-50},
   pmid = {22197120},
   publisher = {Elsevier Ireland Ltd},
   title = {Aerobic interval training improves oxygen uptake efficiency by enhancing cerebral and muscular hemodynamics in patients with heart failure},
