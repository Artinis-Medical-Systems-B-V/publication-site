   doi = {10.1139/apnm-2015-0561},
   isbn = {4033324437},
   issn = {17155320},
   issue = {9},
   journal = {Applied physiology, nutrition, and metabolism = Physiologie appliquee, nutrition et metabolisme},
   keywords = {athletes,athlètes,blood flow restriction,oxygenation,oxygénation,performance,recovery,restriction de la circulation sanguine,récupération},
   month = {9},
   pages = {938-944},
   pmid = {27574913},
   title = {Ischemic preconditioning increases muscle perfusion, oxygen uptake, and force in strength-trained athletes},
