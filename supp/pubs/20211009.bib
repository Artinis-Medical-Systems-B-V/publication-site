   journal = {Pilot and Feasibility Studies},
   keywords = {Gait,Hemodynamics,Near-infrared,Parkinson's disease,Prefrontal cortex,Spectroscopy},
   month = {12},
   pages = {59},
   title = {Measuring prefrontal cortical activity during dual task walking in patients with Parkinson's disease: Feasibility of using a new portable fNIRS device},
