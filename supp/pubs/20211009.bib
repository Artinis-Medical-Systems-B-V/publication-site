   month = {4},
   pages = {129},
   publisher = {SPIE},
   title = {Evaluation of cortical neuroexcitation in urinary urgency using simultaneous near infrared spectroscopy of the brain and bladder with quantification of sensation},
   volume = {11028},
   url = {https://www.spiedigitallibrary.org/conference-proceedings-of-spie/11028/2531668/Evaluation-of-cortical-neuroexcitation-in-urinary-urgency-using-simultaneous-near/10.1117/12.2531668.full},
