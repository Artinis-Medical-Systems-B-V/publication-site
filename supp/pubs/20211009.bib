   pages = {2019},
   pmid = {31466305},
   publisher = {MDPI AG},
   title = {Impact of carbohydrate ingestion on cognitive flexibility and cerebral oxygenation during high-intensity intermittent exercise: A comparison between maple products and usual carbohydrate solutions},
   volume = {11},
