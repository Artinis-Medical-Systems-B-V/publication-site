   keywords = {High-intensity interval training,Near-infrared spectroscopy,Recovery components,Recovery interval intensity},
   pages = {425-434},
   publisher = {Springer Berlin Heidelberg},
   title = {The acute physiological and perceptual effects of recovery interval intensity during cycling-based high-intensity interval training},
   volume = {121},
