   doi = {10.1007/s10877-015-9729-0},
   isbn = {1087701597},
   issn = {15732614},
   issue = {4},
   journal = {Journal of Clinical Monitoring and Computing},
   keywords = {Cerebral oximetery,ITPR,Intra thoracic pressure,Monitoring,NIRS},
   pages = {389-398},
   pmid = {26115773},
   publisher = {Springer Netherlands},
   title = {Frequency domain analysis of cerebral near infrared spectroscopy signals during application of an impedance threshold device in spontaneously ventilating volunteers},
   volume = {30},
