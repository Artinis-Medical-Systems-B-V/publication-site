   keywords = {Ageing,Cerebral oxygenation,Circulation physiology,Heart failure,Near-infrared spectrophotometry,Orthostatic blood pressure},
   month = {3},
   pages = {92-97},
   pmid = {12641603},
   title = {Cerebral oxygenation responses to standing in elderly patients with predominantly diastolic dysfunction},
