   issn = {1932-6203},
   issue = {9},
   journal = {PLoS ONE},
   keywords = {BF-PF},
   month = {9},
   pages = {e46210},
   title = {Effects of Aging on Cerebral Oxygenation during Working-Memory Performance: A Functional Near-Infrared Spectroscopy Study},
   volume = {7},
   url = {https://dx.plos.org/10.1371/journal.pone.0046210},
