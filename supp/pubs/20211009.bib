   issn = {2329-423X},
   issue = {01},
   journal = {Neurophotonics},
   keywords = {BF-PF},
   pages = {1},
   pmid = {29376100},
   title = {Are ventrolateral and dorsolateral prefrontal cortices involved in the computerized Corsi block-tapping test execution? An fNIRS study},
   volume = {5},
   year = {2018},
}
@inproceedings{quaresima_real-time_2001,
   abstract = {The monitoring of a single muscle location does not reflect the heterogeneity of the muscle groups activation during exercise. In the past, measurements of oxygen consumption (V02) at single muscle locations could be carried out noninvasively by near-infrared continuous wave spectroscopy (NIRcws) at rest or during isometric contractions. In the present study, human regional quadriceps (vastus lateralis and rectus femoris) V02 was investigated at rest and during maximal voluntary contractions (MVC) using a 12-channel NIRcws system with an acquisition time of 0. 1 s. V02 either at rest or during isometric exercise was found to be non-uniform in the 12 measurement points over a surface of 8 8 cm2. As expected, V02 during exercise was significantly higher than V02 at rest (j\{\textless\}O.O1). However, in each position no difference was found between the mean values of V02 measured during the twelve 5-s isometric contractions at MVC and the V02 measured during 30-s continuous MVC (ç0.25). The same system was tested on human brain during a language related task. A pronounced increase in oxyhemoglobin associated with a smaller decrease in deoxyhemoglobin was found in the inferior frontal gyms (Broca's area) during translation from a native language to a second language. These results strengthen the role of NIRw imaging as a powerful non-invasive tool for investigating the spatial and temporal features of the brain and muscle oxygenation changes as well as the muscle V02.},
