   journal = {Journal of strength and conditioning research},
   keywords = {BF-PF,PortaLite,PortaMon,SS},
   pages = {2128-2137},
   pmid = {29461423},
   title = {The Effect of Short- and Long-Term Aerobic Training Years on Systemic O2 Utilization, and Muscle and Prefrontal Cortex Tissue Oxygen Extraction in Young Women},
   volume = {33},
