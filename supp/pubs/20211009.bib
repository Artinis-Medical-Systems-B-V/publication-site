   keywords = {Intermittent sprints,Near-infrared spectroscopy,Normobaric hypoxia,Team sports,Vastus lateralis oxygenation},
   pages = {1-9},
   pmid = {23362832},
   title = {Repeated-sprint performance and vastus lateralis oxygenation: Effect of limited O2 availability},
