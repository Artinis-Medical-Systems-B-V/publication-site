   journal = {Journal of Neuroscience Methods},
   keywords = {Hemodynamic response,Motor cortex,NIRS,Optode positioning,TMS},
   month = {9},
   pages = {142-148},
   pmid = {21835198},
   title = {TMS: A navigator for NIRS of the primary motor cortex?},
   volume = {201},
   url = {https://linkinghub.elsevier.com/retrieve/pii/S0165027011004341},
   year = {2011},
