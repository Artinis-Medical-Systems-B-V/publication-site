   keywords = {Passive heat maintenance,elite swimming,freestyle performance,tissue oxygenation},
   month = {8},
   pages = {1493-1499},
   pmid = {27631544},
   title = {Elite sprint swimming performance is enhanced by completion of additional warm-up activities},
   volume = {35},
   url = {https://www.tandfonline.com/doi/full/10.1080/02640414.2016.1223329},
