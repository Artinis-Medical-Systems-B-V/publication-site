   keywords = {EMG,Elbow muscles,Load sharing,Moment arm,Muscle length,Muscle oxygen consumption,NIRS},
   pages = {912-922},
   pmid = {20452784},
   publisher = {Elsevier Ltd},
   title = {The effect of elbow angle and external moment on load sharing of elbow muscles},
   volume = {20},
   url = {http://dx.doi.org/10.1016/j.jelekin.2010.04.003},
