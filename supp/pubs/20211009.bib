   journal = {Brain Research Bulletin},
   keywords = {OxyMon},
   month = {11},
   pages = {235-243},
   title = {Lateral frontal cortex oxygenation changes during translation and language switching revealed by non-invasive near-infrared multi-point measurements},
   volume = {59},
   url = {http://linkinghub.elsevier.com/retrieve/pii/S0361923002008717},
   year = {2002},
}
@article{sperlich_repeated_2015,
   abstract = {Purpose Splenic contraction induced by repeated apneas has been shown to increase oxygen availability. Our aim was to determine whether repeated maximal voluntary apnea enhances the performance of cyclists in a subsequent 4-km time trial. Methods Seven male cyclists [age: 27.1 ± 2.1 years; gen uptake: 56.9 ± 6.6 mL min−1 kg−1 (mean ± SD)] per- height: 182 ± 8 cm; body mass: 74.8 ± 9.2 kg; peak oxy- formed a 4-km time trial on an ergometer with and without four prior maximal bouts of apnea interspersed with 2 min of recovery. Results The average power output during the time trial was similar with (293 ± 48 W) and without (305 ± 42 W) as one (−36.6 ± 10.3 \{\%\}) and 10 min (−19.5 ± 17.9 \{\%\}) size after the fourth bout of apnea (−12.4 ± 9.0 \{\%\}), as well prior apnea (P = 0.11, d = 0.27). The spleen was reduced in after the time trial, while with normal breathing the spleen was smaller one (−35.0 ± 11.3 \{\%\}) and 10 min (−23.4 ± 19.7 \{\%\}) after the time trial. Heart rate; oxygen uptake and carbon dioxide production; tissue oxygen sat- uration; and the lactate concentration, pH, oxygen satura- tion, level of hemoglobin and hematocrit of the blood were similar under both conditions. Conclusions Our present findings reveal that four apneas by cyclists prior to a 4-km time trial led to splenic con- traction, but no change in mean power output, the level of hemoglobin, hematocrit, oxygen saturation of the m. vastus lateralis or oxygen uptake.},
   author = {Billy Sperlich and Christoph Zinner and Roman Pfister and Hans-Christer Holmberg and Guido Michels},
   doi = {10.1007/s00421-014-3003-x},
   issn = {1439-6319, 1439-6327},
