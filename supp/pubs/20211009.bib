   issn = {17481708},
   issue = {4},
   journal = {Acta Physiologica},
   keywords = {Brain oxygenation,Cerebral blood flow,Near-infrared spectroscopy,Pacing},
   month = {4},
   pages = {477-486},
   pmid = {19912150},
   title = {Cerebral oxygenation decreases but does not impair performance during self-paced, strenuous exercise},
   volume = {198},
   url = {http://doi.wiley.com/10.1111/j.1748-1716.2009.02058.x},
