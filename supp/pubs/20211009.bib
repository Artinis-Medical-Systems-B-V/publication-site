   journal = {Experimental Physiology},
   keywords = {PortaLite},
   month = {10},
   pages = {EP089065},
   publisher = {John Wiley \{\&\} Sons, Ltd},
   title = {Influence of cuff-occlusion duration on contrast-enhanced ultrasound measures of calf muscle microvascular blood flow responsiveness in older adults},
   url = {https://onlinelibrary.wiley.com/doi/10.1113/EP089065},
