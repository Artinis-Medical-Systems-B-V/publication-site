   keywords = {NN,OxyMon},
   month = {12},
   pages = {688-692},
   pmid = {19707177},
   title = {Effect of bladderbox alarms during venoarterial extracorporeal membrane oxygenation on cerebral oxygenation and hemodynamics in lambs},
