   url = {http://www.medra.org/servlet/aliasResolver?alias=iospress%7B%5C&%7Dgenre=article%7B%5C&%7Dissn=2212-8794%7B%5C&%7Dvolume=1%7B%5C&%7Dissue=3%7B%5C&%7Dspage=205%7B%5C&%7Ddoi=10.3233/BSI-2012-0018},
