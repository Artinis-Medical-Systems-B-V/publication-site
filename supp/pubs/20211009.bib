   issn = {14396327},
   issue = {10},
   journal = {European Journal of Applied Physiology},
   keywords = {Blood lactate,Muscle activation,Muscle oxygenation,Muscle swelling,Resistance exercise,Sessional work-rate,Simulated altitude},
   pages = {2159-2169},
   pmid = {32705392},
   publisher = {Springer Berlin Heidelberg},
   title = {Sessional work-rate does not affect the magnitude to which simulated hypoxia can augment acute physiological responses during resistance exercise},
   volume = {120},
