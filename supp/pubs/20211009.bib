   doi = {10.1007/s00421-019-04111-y},
   isbn = {0123456789},
   issn = {14396319},
   issue = {5},
   journal = {European Journal of Applied Physiology},
   keywords = {Altitude,Arterial oxygen saturation,Cognition,Exercise,Hypoxemia,Ventilation},
   pages = {1213-1224},
   pmid = {30820661},
   publisher = {Springer Berlin Heidelberg},
   title = {The effect of severe and moderate hypoxia on exercise at a fixed level of perceived exertion},
