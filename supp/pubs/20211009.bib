   issue = {2},
   journal = {Medicine & Science in Sports & Exercise},
   keywords = {PortaMon,SS},
   month = {2},
   pages = {404-412},
   pmid = {33416271},
   title = {A 30-Min Rest Protocol Does Not Affect W′, Critical Power, and Systemic Response},
