   issn = {16000838},
   issue = {4},
   journal = {Scandinavian Journal of Medicine and Science in Sports},
   keywords = {Cold therapy,Cricket,Fatigue,Heat strain,Muscle damage,Near-infrared spectroscopy,Neuromuscular},
   pages = {656-666},
