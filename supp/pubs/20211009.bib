   issn = {1741-2552},
   issue = {4},
   journal = {Journal of Neural Engineering},
   keywords = {BF-M,BF-PF,OxyMon},
   month = {7},
   note = {Publisher: IOP Publishing},
   pages = {46010},
   title = {Multi-channel NIRS of the primary motor cortex to discriminate hand from foot activity},
   volume = {9},
   url = {https://doi.org/10.1088%7B%5C%25%7D2F1741-2560%7B%5C%25%7D2F9%7B%5C%25%7D2F4%7B%5C%25%7D2F046010},
