   issn = {0195-9131},
   issue = {3},
   journal = {Medicine & Science in Sports & Exercise},
   keywords = {PortaMon,SS},
   month = {3},
   pages = {501-508},
   title = {Asymmetry of Quadriceps Muscle Oxygenation during Elite Short-Track Speed Skating},
