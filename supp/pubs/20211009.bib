   publisher = {Frontiers Media S.A.},
   title = {Perceived Mental Workload Classification Using Intermediate Fusion Multimodal Deep Learning},
   volume = {14},
   url = {https://www.frontiersin.org/articles/10.3389/fnhum.2020.609096/full},
   year = {2021},
}
