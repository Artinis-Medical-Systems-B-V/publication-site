   issue = {3},
   journal = {Scandinavian Journal of Medicine & Science in Sports},
   keywords = {PortaMon,SS},
   month = {3},
   pages = {893-904},
   title = {Strength training improves double-poling performance after prolonged submaximal exercise in cross-country skiers},
   volume = {28},
   url = {http://doi.wiley.com/10.1111/sms.12990},
   year = {2018},
}
@article{medow_decreasing_2017,
   abstract = {We measured changes in transcranial Doppler ultrasound (TCD) and near infrared spectroscopy (NIRS) during 70° upright tilt in patients with recurrent vasovagal syncope (VVS, N = 20), postural tachycardia syndrome (POTS, N = 20), and healthy controls (N = 12) aged 15–27 years old. VVS was included if they fainted during testing within 5–15 min of upright tilt. We combined TCD and NIRS to obtain estimates of percent change in the cerebral metabolic rate of oxygen consumption (CMRO2), cerebral blood ﬂow velocity (CBFv), and oxygen extraction fraction (OEF). Over the course of 10 min of upright tilt, CBFv decreased from a baseline of 70 Æ5 to 63 Æ5 cm/sec in controls and 74 Æ3 to 64 Æ3 cm/sec in POTS while decreasing from 74 Æ4 to 44 Æ3 cm/sec in VVS. CMRO2 was unchanged in POTS and controls during tilt while OEF increased by 19 Æ3\{\%\} and 15 Æ3\{\%\}, respectively. CMRO2 decreased by 31 Æ3\{\%\} in VVS during tilt while OEF only increased by 7 Æ3\{\%\}. Oxyhemoglobin decreased by 1.1 Æ1.3 lmol/kg brain tissue in controls, by 1.1 Æ1.3 lmol/kg in POTS, and 11.1 Æ1.3 lmol/kg in VVS. CBFv and CMRO2 fell steadily in VVS during upright tilt. The deﬁcit in CMRO2 in VVS results from inadequate OEF in the face of greatly reduced CBF.},
