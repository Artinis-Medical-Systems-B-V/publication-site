   doi = {10.1002/brb3.2021},
   isbn = {0000000222860},
   issn = {21623279},
   journal = {Brain and Behavior},
   keywords = {Aging,Cognitive science,Gait,Near Infra-red spectroscopy,Task Performance and Analysis,dual-task walking,executive demands,fNIRS},
   month = {1},
   pages = {1-23},
   title = {Hemodynamic and behavioral changes in older adults during cognitively demanding dual tasks},
   volume = {13 Aug},
   url = {https://onlinelibrary.wiley.com/doi/10.1002/brb3.2021},
   year = {2021},
