   title = {Reproducibility of near-infrared spectroscopy parameters measured during brachial artery occlusion and reactive hyperemia in healthy men},
   volume = {17},
   url = {http://biomedicaloptics.spiedigitallibrary.org/article.aspx?doi=10.1117/1.JBO.17.7.077010},
