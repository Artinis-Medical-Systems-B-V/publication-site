   issue = {4},
   journal = {Circulation},
   keywords = {exercise,heart failure,nitrates,nitric oxide},
   month = {1},
   pages = {371-380},
   pmid = {25533966},
   title = {Effect of inorganic nitrate on exercise capacity in heart failure with preserved ejection fraction},
