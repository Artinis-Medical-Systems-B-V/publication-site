   isbn = {0123456789},
   issn = {14396327},
   issue = {10},
   journal = {European Journal of Applied Physiology},
   keywords = {Autonomic function,Blood flow,Kaatsu,Pulse wave reflection,Vascular stiffness},
   pages = {2255-2263},
   pmid = {31420736},
   publisher = {Springer Berlin Heidelberg},
   title = {Central cardiovascular hemodynamic response to unilateral handgrip exercise with blood flow restriction},
