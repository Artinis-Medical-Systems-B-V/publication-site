   journal = {Advances in Experimental Medicine and Biology},
   keywords = {Functional near-infrared spectroscopy,Neuromodulation,Neuroplasticity,Sensorimotor cortex,Tdcs},
   pages = {351-359},
   pmid = {26782232},
   title = {Effects of anodal high-definition transcranial direct current stimulation on bilateral sensorimotor cortex activation during sequential finger movements: An fnirs study},
   volume = {876},
   url = {http://link.springer.com/10.1007/978-1-4939-3023-4_44},
