   keywords = {Deconditioning,Gas exchange kinetics,Microgravity,Near-infrared spectroscopy,Skeletal muscle bioenergetics},
   pages = {101-111},
   pmid = {20395541},
   title = {Role of skeletal muscles impairment and brain oxygenation in limiting oxidative metabolism during exercise after bed rest},
