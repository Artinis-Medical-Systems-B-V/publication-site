   journal = {ProQuest Dissertations and Theses},
   keywords = {0382:Physical therapy,0575:Kinesiology,0719:Physiology,Aquatic exercise,Biological sciences,Cerebral oxygenation,Health and environmental sciences,Kinesiology,Mobility,Multiple sclerosis,Near infrared spectroscopy,Physical therapy,Physiology},
