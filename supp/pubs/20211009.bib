   keywords = {Attention,Connectivity,Fnirs,Prefrontal Cortex,Stroop Test},
   pages = {467-478},
   title = {Identification of the cognitive interference effect related to stroop stimulation: Using dynamic causal modeling of effective connectivity in functional near-infrared spectroscopy (fnirs)},
