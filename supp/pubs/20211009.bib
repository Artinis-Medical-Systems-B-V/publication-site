   journal = {Respiratory Physiology & Neurobiology},
   month = {8},
   pages = {103677},
   pmid = {33957299},
   publisher = {Elsevier B.V.},
   title = {A randomized placebo-control trial of the acute effects of oxygen supplementation on exercise hemodynamics, autonomic modulation, and brain oxygenation in patients with pulmonary hypertension},
   volume = {290},
