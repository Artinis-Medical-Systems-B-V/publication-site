   title = {Knee Extensor Fatigue Threshold Is Related to Whole-Body V˙O2max},
   volume = {44},
   url = {https://insights.ovid.com/crossref?an=00005768-201207000-00022 http://journals.lww.com/00005768-201207000-00022},
