   issue = {20},
   journal = {Journal of Sports Sciences},
   keywords = {OxyMon,SS},
   month = {10},
   pages = {1995-2004},
   title = {The effects of skin and core tissue cooling on oxygenation of the vastus lateralis muscle during walking and running},
   volume = {35},
   url = {https://www.tandfonline.com/doi/full/10.1080/02640414.2016.1245436},
