   title = {The Benefits of Neuromuscular Electrical Stimulation in the Muscular and Functional Capacity of Patients With Liver Cirrhosis: Protocol for a Randomized Clinical Trial},
   volume = {11},
   url = {http://journals.sagepub.com/doi/10.1177/1179552218811834},
   year = {2018},
}
