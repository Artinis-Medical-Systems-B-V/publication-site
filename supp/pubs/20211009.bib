   keywords = {Fatigue,Near-infrared spectroscopy,Pulmonary O2 uptake kinetics,Spinal cord injury},
   month = {10},
   pages = {1989-2000},
   pmid = {28744558},
   title = {Fatigability, oxygen uptake kinetics and muscle deoxygenation in incomplete spinal cord injury during treadmill walking},
