   keywords = {PortaMon,SS},
   pages = {444-455},
   pmid = {30899346},
   title = {Acute Effects of L-Arginine Supplementation on Oxygen Consumption Kinetics and Muscle Oxyhemoglobin and Deoxyhemoglobin during Treadmill Running in Male Adults.},
   volume = {12},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/30899346%0Ahttp://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC6413837},
