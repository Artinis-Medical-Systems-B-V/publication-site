   keywords = {Biomechanical modelling,EMG,Elbow,NIRS,Oxygen consumption},
   month = {7},
   pages = {905-912},
   pmid = {12757798},
   title = {Muscle oxygen consumption, determined by NIRS, in relation to external force and EMG},
   volume = {36},
