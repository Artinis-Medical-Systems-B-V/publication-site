   pages = {1-12},
   pmid = {31736428},
   publisher = {Taylor \{\&\} Francis},
   title = {Acute effects of combined Bacopa, American ginseng and whole coffee fruit on working memory and cerebral haemodynamic response of the prefrontal cortex: a double-blind, placebo-controlled study},
   volume = {0},
