   isbn = {0123456789},
   issn = {1439-6319},
   journal = {European Journal of Applied Physiology},
   month = {5},
   publisher = {Springer Berlin Heidelberg},
   title = {Impact of a submaximal mono-articular exercise on the skeletal muscle function of patients with sickle cell disease},
