journal = {Frontiers in Human Neuroscience},
keywords = {Audiovisual,Auditory cortex,BF-T,Cochlear implants,Functional near-infrared spectroscopy (fNIRS),NIRS-EEG,OxyMon,Speech},
mendeley-tags = {BF-T,NIRS-EEG,OxyMon},
number = {FEB2016},
pages = {1--14},
title = {{Temporal cortex activation to audiovisual speech in norma-hearing and cochlear implant users measured with functional near-infrared spectroscopy}},
