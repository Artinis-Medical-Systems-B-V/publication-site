issn = {20754418},
journal = {Diagnostics},
keywords = {Alzheimer's Disease,BF-PF,CR,FNIRS,Mild Cognitive Impairment,Neuroimaging,Neurological disease,Neurovascular coupling,OxyMon,Parkinson's Disease},
mendeley-tags = {BF-PF,CR,OxyMon},
