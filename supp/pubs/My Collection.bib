issn = {15550273},
journal = {International Journal of Sports Physiology and Performance},
keywords = {Aerobic fitness,Oxygen saturation,Peripheral adaptations},
month = {nov},
number = {10},
pages = {1299--1307},
title = {{Muscle oxygenation rather than VO2max as a strong predictor of performance in sprint canoe–Kayak}},
