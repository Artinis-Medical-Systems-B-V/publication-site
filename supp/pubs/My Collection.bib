issn = {20521847},
journal = {BMC Sports Science, Medicine and Rehabilitation},
keywords = {Hyperemia,Interval training,Muscle oxygenation,Near-infrared spectroscopy,PortaMon,Prior exercise,SS},
mendeley-tags = {PortaMon,SS},
month = {dec},
number = {1},
title = {{Relationship of post-exercise muscle oxygenation and duration of cycling exercise}},
url = {http://bmcsportsscimedrehabil.biomedcentral.com/articles/10.1186/s13102-016-0036-y},
