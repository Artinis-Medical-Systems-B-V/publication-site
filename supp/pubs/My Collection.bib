@article{Pethick2021,
abstract = {PurposeJoint angle is a significant determinant of neuromuscular and metabolic function. We tested the hypothesis that previously reported correlations between knee-extensor torque complexity and metabolic rate ( ṁVO2 ) would be conserved at reduced joint angles (i.e. shorter muscle lengths).MethodsEleven participants performed intermittent isometric knee-extensor contractions at 50% maximum voluntary torque for 30 min or until task failure (whichever occurred sooner) at joint angles of 30{\textordmasculine}, 60{\textordmasculine} and 90{\textordmasculine} of flexion (0{\textordmasculine} = extension). Torque and surface EMG were sampled continuously. Complexity and fractal scaling of torque were quantified using approxi-mate entropy (ApEn) and detrended fluctuation analysis (DFA) $\alpha$. ṁVO2 was determined using near-infrared spectroscopy.Results Time to task failure/end increased as joint angle decreased (P < 0.001). Over time, complexity decreased at 90{\textordmasculine} and 60{\textordmasculine} (decreased ApEn, increased DFA $\alpha$, both P < 0.001), but not 30{\textordmasculine}. ṁVO2 increased at all joint angles (P < 0.001), though the magnitude of this increase was lower at 30{\textordmasculine} compared to 60{\textordmasculine} and 90{\textordmasculine} (both P < 0.01). There were significant correlations between torque complexity and ṁVO2 at 90{\textordmasculine} (ApEn, r = − 0.60, P = 0.049) and 60{\textordmasculine} (ApEn, r = − 0.64, P = 0.035; DFA $\alpha$, $\rho$ = 0.68, P = 0.015).ConclusionThe lack of correlation between ṁVO2 and complexity at 30{\textordmasculine} was likely due to low relative task demands, given the similar kinetics of ṁVO2 and torque complexity. An inverse correlation between ṁVO2 and knee-extensor torque com-plexity occurs during high-intensity contractions at intermediate, but not short, muscle lengths.},
author = {Pethick, Jamie and Winter, Samantha L. and Burnley, Mark},
doi = {10.1007/s00421-021-04779-1},
file = {::},
issn = {1439-6319},
