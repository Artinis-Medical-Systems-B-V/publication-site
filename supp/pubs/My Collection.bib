journal = {Brain and Cognition},
keywords = {Available response time,BF-PF,Gait,Motor planning,Obstacle negotiation,Prefrontal cortex,fNIRS},
mendeley-tags = {BF-PF},
month = {apr},
pages = {45--51},
pmid = {29454975},
shorttitle = {Prefrontal cortex activation during obstacle negot},
title = {{Prefrontal cortex activation during obstacle negotiation: What's the effect size and timing?}},
