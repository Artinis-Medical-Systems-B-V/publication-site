journal = {Magnetic Resonance in Medicine},
keywords = {Bioenergetic status,Carbogen,Gliomas,Oxygenation,Perfusion},
number = {3},
pages = {490--499},
pmid = {10467293},
title = {{Effect of carbogen breathing on the physiological profile of human glioma xenografts}},
