journal = {American Journal of Physiology - Heart and Circulatory Physiology},
keywords = {CR,Near-infrared spectroscopy,Oxygen delivery,Oxygen kinetics,Oxygen utilization,PortaMon,Skeletal muscle oxygenation},
mendeley-tags = {CR,PortaMon},
month = {dec},
number = {6},
pages = {H1530--H1539},
