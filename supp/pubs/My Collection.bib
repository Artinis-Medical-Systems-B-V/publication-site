number = {1},
pages = {53--65},
pmid = {24518371},
title = {{Cardiometabolic and traditional cardiovascular risk factors and their potential impact on macrovascular and microvascular function: Preliminary data}},
url = {https://www.medra.org/servlet/aliasResolver?alias=iospress&doi=10.3233/CH-141816},
