doi = {10.1152/japplphysiol.00988.2013},
issn = {15221601},
journal = {Journal of Applied Physiology},
keywords = {HA,Hypoxia,Isolated contractions,Maximal intermittent exercise,Neuromuscular fatigue,OxyMon,Time-course},
mendeley-tags = {HA,OxyMon},
number = {9},
pages = {1063--1073},
pmid = {25213635},
title = {{Peripheral fatigue is not critically regulated during maximal, intermittent, dynamic leg extensions}},
