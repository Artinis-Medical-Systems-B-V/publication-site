issn = {18735711},
journal = {Journal of Electromyography and Kinesiology},
keywords = {EMG,Muscle activation,Muscle oxygenation,NIRS,PortaMon,Reproducibility,SS},
mendeley-tags = {PortaMon,SS},
month = {oct},
number = {5},
pages = {722--730},
pmid = {25127493},
title = {{Reliability of telemetric electromyography and near-infrared spectroscopy during high-intensity resistance exercise}},
