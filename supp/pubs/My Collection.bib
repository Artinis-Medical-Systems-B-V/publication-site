doi = {10.1007/s00421-010-1444-4},
issn = {14396319},
journal = {European Journal of Applied Physiology},
keywords = {Altitude,BF-PF,Brain oxygenation,HA,Hypoxia,Intermittent sprints,NIRS,OxyMon,SS},
