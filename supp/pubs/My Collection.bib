doi = {10.1016/j.niox.2020.10.002},
issn = {10898611},
journal = {Nitric Oxide - Biology and Chemistry},
keywords = {Chronic,Exercise tolerance,Mitochondria,Muscle,Nitrates,PortaMon,Renal insufficiency},
