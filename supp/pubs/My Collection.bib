issn = {10538119},
journal = {NeuroImage},
keywords = {BF-PF,BOLD,Cerebral autoregulation,Near infrared spectroscopy,OxyMon,Spontaneous oscillations,Vasomotion,Working memory},
mendeley-tags = {BF-PF,OxyMon},
month = {jan},
pages = {608--615},
pmid = {23660026},
title = {{Very-low-frequency oscillations of cerebral hemodynamics and blood pressure are affected by aging and cognitive load}},
