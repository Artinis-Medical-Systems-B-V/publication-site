author = {Salvadego, Desy and Lazzer, Stefano and Marzorati, Mauro and Porcelli, Simone and Rejc, Enrico and {\v{S}}imuni{\v{c}}, Bostjan and Pi{\v{s}}ot, Rado and {Di Prampero}, Pietro Enrico and Grassi, Bruno},
doi = {10.1152/japplphysiol.01380.2010},
