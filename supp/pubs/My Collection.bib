journal = {Journal of Biomechanics},
keywords = {Biomechanical modelling,CR,EMG,Elbow,NIRS,OxyMon,Oxygen consumption},
mendeley-tags = {CR,OxyMon},
month = {jul},
number = {7},
pages = {905--912},
pmid = {12757798},
title = {{Muscle oxygen consumption, determined by NIRS, in relation to external force and EMG}},
