pages = {207},
title = {{Effects of Aerobic Exercise on Cognitive and Cerebrovascular Function in Hypertensive Adults}},
url = {https://manchester.idm.oclc.org/login?url=https://search.proquest.com/docview/2066657625?accountid=12253%0Ahttp://man-fe.hosted.exlibrisgroup.com/openurl/44MAN/44MAN_services_page?genre=dissertations+%26+theses&atitle=&author=Lefferts%2C+Wesley+K.&volume=},
