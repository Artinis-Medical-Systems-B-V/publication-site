issn = {01650270},
journal = {Journal of Neuroscience Methods},
keywords = {Autonomic arousal,BF-V,Blood pressure,Near-infrared spectroscopy (NIRS),OxyMon,Visual stimulation},
mendeley-tags = {BF-V,OxyMon},
month = {apr},
number = {2},
pages = {283--288},
pmid = {21392529},
title = {{Intra- and extra-cranial effects of transient blood pressure changes on brain near-infrared spectroscopy (NIRS) measurements}},
