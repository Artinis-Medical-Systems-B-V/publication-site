keywords = {BF-M,OxyMon},
mendeley-tags = {BF-M,OxyMon},
month = {aug},
pages = {390--396},
title = {{<title>Detailed evidence of cerebral hemoglobin oxygenation changes in response to motor cortical activation revealed by a continuous-wave spectrophotometer with 10-Hz temporal resolution</title>}},
url = {http://proceedings.spiedigitallibrary.org/proceeding.aspx?articleid=1027807},
