doi = {10.15857/ksep.2020.29.3.307},
isbn = {8232835869},
issn = {23840544},
journal = {Exercise Science},
keywords = {Aerobic exercise,Arterial stiffness,Augmentation index,BF-PF,Cerebral blood flow,Cognitive func-tion,High-intensity interval exercise,PortaLite,Pulse wave velocity,Smokers},
mendeley-tags = {BF-PF,PortaLite},
number = {3},
