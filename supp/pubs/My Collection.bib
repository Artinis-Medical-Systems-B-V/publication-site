doi = {10.1152/japplphysiol.01318.2009},
issn = {87507587},
journal = {Journal of Applied Physiology},
keywords = {Blood flow,Isolated muscle,Near-infrared spectroscopy,O2 uptake kinetics,Oxidative metabolism,OxyMon,Slow component},
mendeley-tags = {OxyMon},
number = {5},
pages = {1169--1176},
pmid = {20223997},
title = {{A prior bout of contractions speeds V̇o2 and blood flow on-kinetics and reduces the V̇o2 slow-component amplitude in canine skeletal muscle contracting in situ}},
