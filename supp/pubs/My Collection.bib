isbn = {0123456789},
issn = {14321459},
journal = {Journal of Neurology},
keywords = {BF-PF,Freezing of gait,Functional near-infrared spectroscopy,Imaging,Levodopa-overdose hypothesis,Parkinson's disease,PortaLite,Prefrontal cortex,fNIRS},
mendeley-tags = {BF-PF,PortaLite},
