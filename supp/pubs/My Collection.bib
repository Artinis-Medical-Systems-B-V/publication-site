journal = {NeuroImage},
keywords = {BF-M,BF-PF,FNIRS,Gait,Motor cortex,OxyMon,Precision stepping,Prefrontal cortex,Treadmill},
mendeley-tags = {BF-M,BF-PF,OxyMon},
pages = {415--422},
pmid = {23631980},
publisher = {Elsevier B.V.},
title = {{Cortical control of normal gait and precision stepping: An fNIRS study}},
url = {http://dx.doi.org/10.1016/j.neuroimage.2013.04.070},
volume = {85},
